@model LoginModel
@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Login";
}
<style>
    form .password-group {
        position: relative;
    }

        form .password-group i {
            position: absolute;
            right: 13px;
            top: 30px;
            cursor: pointer;
        }
</style>
<div class="container-fluid">
    <div class="row justify-content-center vh-100 align-items-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="UserName"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3 password-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <i class="bi bi-eye" onclick="PasswordIconClick(event)"></i>
                        </div>
                        <hr />
                        <input type="submit" class="btn btn-primary w-100" value="Login" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const PasswordIconClick = (e) => {
            console.log(e);
            debugger;
            var type = $(e.target).parent().children('input').attr('type');
            var icon = $(e.target).parent().children('i');
            $(e.target).parent().children('.form-control').attr('type', type == "password" ? "text" : "password");
            if ($(icon).hasClass('bi-eye')) {
                $(icon).addClass('bi-eye-slash').removeClass('bi-eye');
            }
            else {
                $(icon).addClass('bi-eye').removeClass('bi-eye-slash');
            }

        }
    </script>
}